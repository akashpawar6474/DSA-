class Solution:
    def mySqrt(self, x: int) -> int:
        """
        this is classic binary search problem
        our root can lies in range 0 to x
        if mid * mid <= x
            then move left politely
            because curr mid can be our ans
        else:
            move right straight forward
        tc = O(logx)
        sc = constant
        """
        start = 0
        end = x
        ans = 0
        while start <= end:
            mid = (start + end) // 2
            if mid * mid <= x:
                ans = mid
                start = mid + 1
            else:
                end = mid - 1
        return ans
